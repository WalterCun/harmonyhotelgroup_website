---
import { lang_es } from "lib/constants";
import Layout from "core/layouts/Layout.astro";

const blogPosts = [
  {
    id: 1,
    title: "Top 10 Beach Destinations for 2025",
    excerpt:
      "Discover the most stunning beach destinations that should be on your travel bucket list this year.",
    date: "May 15, 2025",
    author: "Emma Rodriguez",
    category: "Destinations",
    image:
      "https://images.pexels.com/photos/1450360/pexels-photo-1450360.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    id: 2,
    title: "The Art of Luxury Travel: A Guide to First-Class Experiences",
    excerpt:
      "Learn how to elevate your travel experience with insider tips from seasoned luxury travelers.",
    date: "April 28, 2025",
    author: "Jonathan Chang",
    category: "Luxury Travel",
    image:
      "https://images.pexels.com/photos/2873951/pexels-photo-2873951.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    id: 3,
    title: "Sustainable Tourism: How to Travel Responsibly",
    excerpt:
      "Explore how you can reduce your environmental impact while still enjoying unforgettable travel experiences.",
    date: "April 10, 2025",
    author: "Sophia Green",
    category: "Sustainable Travel",
    image:
      "https://images.pexels.com/photos/346885/pexels-photo-346885.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    id: 4,
    title: "Cultural Immersion: Beyond the Tourist Attractions",
    excerpt:
      "Dive deeper into local cultures and discover authentic experiences that most tourists miss.",
    date: "March 22, 2025",
    author: "Marcus Johnson",
    category: "Cultural Travel",
    image:
      "https://images.pexels.com/photos/3155666/pexels-photo-3155666.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    id: 5,
    title: "The Ultimate Guide to Travel Photography",
    excerpt:
      "Capture stunning travel memories with these professional photography tips and tricks.",
    date: "March 5, 2025",
    author: "Lily Chen",
    category: "Travel Tips",
    image:
      "https://images.pexels.com/photos/3049685/pexels-photo-3049685.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    id: 6,
    title: "Hidden Gems: Exploring Off-the-Beaten-Path Destinations",
    excerpt:
      "Discover extraordinary destinations that haven't yet made it onto most travelers' radar.",
    date: "February 18, 2025",
    author: "David Wilson",
    category: "Destinations",
    image:
      "https://images.pexels.com/photos/2108845/pexels-photo-2108845.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
];

const categories = [
  "All Categories",
  "Destinations",
  "Luxury Travel",
  "Sustainable Travel",
  "Cultural Travel",
  "Travel Tips",
  "Hotel Reviews",
  "Culinary Journeys",
];
---

<Layout lang={lang_es} title="Blog">
  <div class="bg-primary-500/10 dark:bg-neutral-800 py-16">
    <div class="container">
      <h1 class="text-center mb-6">Our Travel Blog</h1>
      <p class="text-center text-lg text-neutral-700 dark:text-neutral-300 max-w-3xl mx-auto">
        Travel inspiration, destination guides, and insider tips to enhance your journey.
      </p>
    </div>
  </div>
  
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Search -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4">Search</h3>
            <div class="relative">
              <label>
                <input
                  type="text"
                  placeholder="Search articles..."
                  class="input pr-10"
                />
              </label>
              <button class="absolute right-3 top-1/2 transform -translate-y-1/2 text-neutral-500">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                  <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Categories -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4">Categories</h3>
            <ul class="space-y-2">
              {categories.map((category, index) => (
                <li>
                  <a 
                    href={index === 0 ? "/blog" : `/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`}
                    class={`block py-2 px-3 rounded-md transition-colors ${index === 0 ? 'bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 font-medium' : 'hover:bg-neutral-100 dark:hover:bg-neutral-700 text-neutral-700 dark:text-neutral-300'}`}
                  >
                    {category}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Recent Posts -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4">Recent Posts</h3>
            <div class="space-y-4">
              {blogPosts.slice(0, 3).map(post => (
                <a href={`/blog/${post.id}`} class="flex items-start group">
                  <div class="w-16 h-16 shrink-0 overflow-hidden rounded-md mr-3">
                    <img 
                      src={post.image} 
                      alt={post.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                  </div>
                  <div>
                    <h4 class="text-sm font-medium text-neutral-800 dark:text-neutral-200 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
                      {post.title}
                    </h4>
                    <p class="text-xs text-neutral-500 dark:text-neutral-400 mt-1">
                      {post.date}
                    </p>
                  </div>
                </a>
              ))}
            </div>
          </div>
          
          <!-- Subscribe -->
          <div class="p-6 bg-primary-500/10 dark:bg-primary-900/20 rounded-lg">
            <h3 class="text-xl font-semibold mb-3">Subscribe</h3>
            <p class="text-sm text-neutral-700 dark:text-neutral-300 mb-4">
              Get our latest blog posts and travel inspiration delivered to your inbox.
            </p>
            <form class="space-y-3">
              <label>
                <input
                  type="email"
                  placeholder="Your email address"
                  class="input"
                  required
                />
              </label>
              <button type="submit" class="btn btn-primary w-full">
                Subscribe
              </button>
            </form>
          </div>
        </div>
        
        <!-- Main Content -->
        <div class="lg:col-span-3">
          <!-- Featured Post -->
          <div class="mb-12">
            <a href={`/blog/${blogPosts[0].id}`} class="block group">
              <div class="relative h-80 rounded-lg overflow-hidden">
                <img 
                  src={blogPosts[0].image} 
                  alt={blogPosts[0].title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent"></div>
                <div class="absolute bottom-0 left-0 p-6 text-white">
                  <span class="inline-block px-3 py-1 bg-primary-500 text-white text-xs font-semibold rounded-full mb-3">
                    {blogPosts[0].category}
                  </span>
                  <h2 class="text-2xl md:text-3xl font-semibold mb-2">{blogPosts[0].title}</h2>
                  <p class="text-white/80 mb-3">{blogPosts[0].excerpt}</p>
                  <div class="flex items-center">
                    <span class="text-sm">{blogPosts[0].date}</span>
                    <span class="mx-2">â€¢</span>
                    <span class="text-sm">By {blogPosts[0].author}</span>
                  </div>
                </div>
              </div>
            </a>
          </div>
          
          <!-- Blog Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {blogPosts.slice(1).map(post => (
              <a href={`/blog/${post.id}`} class="card group hover:shadow-xl transition-all duration-300">
                <div class="relative h-48 overflow-hidden">
                  <img 
                    src={post.image} 
                    alt={post.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                  <div class="absolute top-3 left-3">
                    <span class="inline-block px-3 py-1 bg-primary-500 text-white text-xs font-semibold rounded-full">
                      {post.category}
                    </span>
                  </div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">{post.title}</h3>
                  <p class="text-neutral-600 dark:text-neutral-400 mb-4">{post.excerpt}</p>
                  <div class="flex justify-between items-center text-sm text-neutral-500 dark:text-neutral-400">
                    <span>{post.date}</span>
                    <span>By {post.author}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
          
          <!-- Pagination -->
          <div class="mt-12 flex justify-center">
            <nav class="inline-flex">
              <a href="#" class="px-4 py-2 text-sm font-medium bg-white dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-700 rounded-l-md hover:bg-neutral-50 dark:hover:bg-neutral-700">
                Previous
              </a>
              <a href="#" class="px-4 py-2 text-sm font-medium bg-primary-500 text-white border border-primary-500 hover:bg-primary-600 hover:border-primary-600">
                1
              </a>
              <a href="#" class="px-4 py-2 text-sm font-medium bg-white dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-700 hover:bg-neutral-50 dark:hover:bg-neutral-700">
                2
              </a>
              <a href="#" class="px-4 py-2 text-sm font-medium bg-white dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-700 hover:bg-neutral-50 dark:hover:bg-neutral-700">
                3
              </a>
              <a href="#" class="px-4 py-2 text-sm font-medium bg-white dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-700 rounded-r-md hover:bg-neutral-50 dark:hover:bg-neutral-700">
                Next
              </a>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
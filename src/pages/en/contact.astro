---
import { lang_en } from "lib/constants";
import Layout from "~/layouts/Layout.astro";

const offices = [
	{
		location: "Global Headquarters",
		address: "123 Harmony Plaza, New York, NY 10001, USA",
		phone: "+1 (212) 555-1234",
		email: "info@harmonyhotelgroup.com",
		hours: "Monday - Friday: 9:00 AM - 6:00 PM EST",
	},
	{
		location: "European Office",
		address: "45 Boulevard Saint-Germain, 75005 Paris, France",
		phone: "+33 1 23 45 67 89",
		email: "europe@harmonyhotelgroup.com",
		hours: "Monday - Friday: 9:00 AM - 6:00 PM CET",
	},
	{
		location: "Asia-Pacific Office",
		address: "888 Century Avenue, Pudong, Shanghai 200120, China",
		phone: "+86 21 5888 7777",
		email: "asia@harmonyhotelgroup.com",
		hours: "Monday - Friday: 9:00 AM - 6:00 PM CST",
	},
];
---

<Layout lang={lang_en} title="Contact Us">
  <div class="bg-primary-500/10 dark:bg-neutral-800 py-16">
    <div class="container">
      <h1 class="text-center mb-6">Contact Us</h1>
      <p class="text-center text-lg text-neutral-700 dark:text-neutral-300 max-w-3xl mx-auto">
        We're here to help with any questions about our hotels, bookings, or services.
      </p>
    </div>
  </div>
  
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-semibold mb-6">Send Us a Message</h2>
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">First Name</label>
                <input type="text" id="first-name" class="input" required />
              </div>
              <div>
                <label for="last-name" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Last Name</label>
                <input type="text" id="last-name" class="input" required />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Email Address</label>
              <input type="email" id="email" class="input" required />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Phone Number</label>
              <input type="tel" id="phone" class="input" />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Subject</label>
              <select id="subject" class="select" required>
                <option value="">Please select</option>
                <option value="booking">Booking Inquiry</option>
                <option value="existing">Existing Reservation</option>
                <option value="special">Special Request</option>
                <option value="feedback">Feedback</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Message</label>
              <textarea id="message" rows="6" class="input" required></textarea>
            </div>
            
            <div class="flex items-start">
              <input type="checkbox" id="privacy" class="checkbox mt-1" required />
              <label for="privacy" class="ml-2 block text-sm text-neutral-600 dark:text-neutral-400">
                I agree to the <a href="/privacy" class="text-primary-500 hover:underline">Privacy Policy</a> and consent to the processing of my personal data.
              </label>
            </div>
            
            <button type="submit" class="btn btn-primary w-full md:w-auto">
              Send Message
            </button>
          </form>
        </div>
        
        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-semibold mb-6">Our Offices</h2>
          
          <div class="space-y-8">
            {offices.map(office => (
              <div class="bg-white dark:bg-neutral-800 p-6 rounded-lg shadow-xs">
                <h3 class="text-xl font-semibold mb-4">{office.location}</h3>
                <div class="space-y-3">
                  <p class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-3 text-primary-500 shrink-0">
                      <path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-neutral-700 dark:text-neutral-300">{office.address}</span>
                  </p>
                  
                  <p class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-3 text-primary-500 shrink-0">
                      <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-neutral-700 dark:text-neutral-300">{office.phone}</span>
                  </p>
                  
                  <p class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-3 text-primary-500 shrink-0">
                      <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                      <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                    </svg>
                    <span class="text-neutral-700 dark:text-neutral-300">{office.email}</span>
                  </p>
                  
                  <p class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-3 text-primary-500 shrink-0">
                      <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-neutral-700 dark:text-neutral-300">{office.hours}</span>
                  </p>
                </div>
              </div>
            ))}
          </div>
          
          <!-- Customer Support -->
          <div class="mt-8 p-6 bg-primary-500/10 dark:bg-primary-900/20 rounded-lg">
            <h3 class="text-xl font-semibold mb-3">Customer Support</h3>
            <p class="mb-4 text-neutral-700 dark:text-neutral-300">
              Our customer support team is available 24/7 to assist you with any urgent inquiries or booking needs.
            </p>
            <div class="flex items-center text-lg font-semibold text-primary-500">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 mr-2">
                <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
              </svg>
              +1 (800) 555-9876
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Map section - In a real implementation, you would integrate Google Maps or similar -->
  <section class="py-12 bg-neutral-100 dark:bg-neutral-800">
    <div class="container">
      <div class="bg-neutral-200 dark:bg-neutral-700 h-96 rounded-lg flex items-center justify-center">
        <p class="text-neutral-600 dark:text-neutral-300 text-center">
          Interactive map would be displayed here.<br>
          For implementation, integrate Google Maps or another mapping service.
        </p>
      </div>
    </div>
  </section>
</Layout>
---
import { trans } from "~/utils/translations";
import ImageFull from "core/imagen/ImageFull.astro";
import ReservationForm from "templates/forms/ReservationForm.astro";

interface Props {
  lang: string;
}
const { lang } = Astro.props;

// Importar la imagen directamente
import heroImage1 from "../../../assets/upload/hero-backgrounds/bg-cuenca1.webp";
import heroImage2 from "../../../assets/upload/hero-backgrounds/bg-cuenca2.webp";
import heroImage3 from "../../../assets/upload/hero-backgrounds/bg-cuenca3.webp";
import heroImage4 from "../../../assets/upload/hero-backgrounds/bg-cuenca4.webp";
import heroImage5 from "../../../assets/upload/hero-backgrounds/bg-cuenca5.webp";
import heroImage6 from "../../../assets/upload/hero-backgrounds/bg-cuenca6.webp";
import heroImage7 from "../../../assets/upload/hero-backgrounds/bg-cuenca7.webp";
import heroImage8 from "../../../assets/upload/hero-backgrounds/bg-cuenca8.webp";
import heroImage9 from "../../../assets/upload/hero-backgrounds/bg-cuenca9.webp";
import heroImage10 from "../../../assets/upload/hero-backgrounds/bg-cuenca10.webp";
import heroImage11 from "../../../assets/upload/hero-backgrounds/bg-cuenca11.webp";
import heroImage12 from "../../../assets/upload/hero-backgrounds/bg-cuenca12.webp";
import heroImage13 from "../../../assets/upload/hero-backgrounds/bg-cuenca13.webp";
import heroImage14 from "../../../assets/upload/hero-backgrounds/bg-cuenca14.webp";
import heroImage15 from "../../../assets/upload/hero-backgrounds/bg-cuenca15.webp";

const heroImages = [
  heroImage1,
  heroImage2,
  heroImage3,
  heroImage4,
  heroImage5,
  heroImage6,
  heroImage7,
  heroImage8,
  heroImage9,
  heroImage10,
  heroImage11,
  heroImage12,
  heroImage13,
  heroImage14,
  heroImage15,
];

// Seleccionar una imagen aleatoria
const heroImage = heroImages[Math.floor(Math.random() * heroImages.length)];
---

<div
  class="relative flex flex-col items-center justify-start min-h-[calc(100vh-5rem)] overflow-hidden"
>
  <ImageFull src={heroImage} />

  {/* Hero Content */}
  <div
    class="relative z-10 w-full pt-20 md:pt-28 lg:pt-32 text-center text-white"
  >
    <div class="container px-4 md:px-6 max-w-4xl mx-auto">
      <h1
        class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl drop-shadow-md"
      >
        {trans(lang, "home.hero.title")}
      </h1>
      <p
        class="mt-4 max-w-2xl mx-auto text-lg md:text-xl text-neutral-200 drop-shadow-xs"
      >
        {trans(lang, "home.hero.subtitle")}
      </p>
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <a href="/hotels" class="btn btn-primary">
          {trans(lang, "home.hero.btn.view-hotels")}
        </a>
        <a
          href="/offers"
          class="btn btn-outline shadow-none"
        >
          {trans(lang, "home.hero.btn.view-offers")}
        </a>
      </div>
    </div>
  </div>

  {/* Booking Form Section */}
  <div class="relative z-10 w-full mt-12 md:mt-16 lg:mt-20 pb-12 px-4">
    <div class="container max-w-4xl mx-auto">
      <ReservationForm lang={lang} />
    </div>
  </div>
</div>

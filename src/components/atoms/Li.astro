---
import type { HTMLAttributes } from "astro/types";
import { cn } from "~/utils";

export interface Props extends HTMLAttributes<"li"> {
  href: string;
  label: string;
  class?: string;
}

const { href, label, class: className = "", ...rest } = Astro.props;

const classes = cn(className);
---
<li class={classes} {...rest}>
    <a href={href}
       class="text-neutral-700 hover:text-primary-500 font-medium transition-colors duration-200">
        {label}
    </a>
</li>
<style>
    .main-navigation :global(svg) {
        width: 120px;
        height: auto;
    }

    .animated-text {
        font-size: 1.5rem;
        position: relative;
        overflow: hidden;
        background: linear-gradient(
                90deg,
                rgba(212, 175, 55, 1) 0%,
                rgba(255, 215, 0, 1) 25%,
                rgba(212, 175, 55, 1) 50%,
                rgba(255, 215, 0, 1) 75%,
                rgba(212, 175, 55, 1) 100%
        );
        background-size: 200% auto;
        background-clip: text;
        -webkit-background-clip: text;
        animation: gradient 3s linear infinite;
    }

    .animated-text span.text-primary-500 {
        position: relative;
        z-index: 1;
    }

    @keyframes gradient {
        0% {
            background-position: 0% center;
        }
        100% {
            background-position: 200% center;
        }
    }

    /* Modo oscuro */
    :global(.dark) .animated-text span.text-neutral-800 {
        color: rgba(248, 249, 250, 1);
    }
</style>


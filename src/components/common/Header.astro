---
import BookingForm from '../forms/BookingForm.astro';
import LanguageSwitcher from '../ui/dropdown/LanguageDropDown.astro';
import CurrencySwitcher from '../ui/dropdown/CurrencyDropDown.astro';
import ThemeToggle from './ThemeToggle.astro';
import Navigation from './Navigation.astro';
import Logo from '../svg/Logo.astro';
---

<header class="w-full bg-white dark:bg-neutral-900 shadow-sm sticky top-0 z-50 transition-colors duration-300">
  <div class="container">
    <!-- Top utility bar -->
    <div class="flex justify-end items-center py-2 border-b border-neutral-200 dark:border-neutral-800 text-sm">
      <div class="flex items-center space-x-4">
        <LanguageSwitcher />
        <CurrencySwitcher />
        <ThemeToggle />
        <a href="/login" class="text-neutral-700 dark:text-neutral-300 hover:text-primary-500 dark:hover:text-primary-400">
          Login
        </a>
      </div>
    </div>

    <!-- Main navigation -->
    <div class="main-navigation flex justify-between items-center py-4">
      <Logo block md:hidden/>
      <!--<div class="hidden md:block text-xl font-bold text-primary-600 dark:text-primary-400">-->
      <!--  HARMONY HOTEL GROUP-->
      <!--</div>-->

      <Navigation />
    </div>
  </div>


  <div class="bg-primary-500/10 dark:bg-primary-500/5 py-4 border-t border-b border-neutral-200 dark:border-neutral-800">
    <div class="container">
      <BookingForm />
    </div>
  </div>
</header>

<style>
  .main-navigation :global(svg) {
    width: 120px;
    height: auto;
  }
</style>

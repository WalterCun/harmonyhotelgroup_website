---
import SocialLinks from './SocialLinks.astro';

const quickLinks = [
  { label: "About Us", href: "/about" },
  { label: "Hotels", href: "/hotels" },
  { label: "Destinations", href: "/destinations" },
  { label: "Offers", href: "/offers" },
  { label: "Blog", href: "/blog" },
  { label: "Contact", href: "/contact" },
  { label: "Privacy Policy", href: "/privacy" },
  { label: "Terms of Service", href: "/terms" },
];

const faqs = [
  { label: "Booking Process", href: "/faq#booking" },
  { label: "Cancellation Policy", href: "/faq#cancellation" },
  { label: "Loyalty Program", href: "/faq#loyalty" },
  { label: "Payment Methods", href: "/faq#payment" },
  { label: "COVID-19 Measures", href: "/faq#covid" },
];
---

<footer class="bg-neutral-100 dark:bg-neutral-900 text-neutral-700 dark:text-neutral-300 border-t border-neutral-200 dark:border-neutral-800">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 py-12">
      <!-- Company Info -->
      <div>
        <h3 class="text-xl font-semibold font-serif text-neutral-800 dark:text-neutral-100 mb-4">Harmony Hotel Group</h3>
        <p class="mb-4">Experience luxury and comfort at our premium hotels and resorts worldwide. Discover unforgettable stays with exceptional service.</p>
        <SocialLinks />
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-xl font-semibold font-serif text-neutral-800 dark:text-neutral-100 mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
              <li>
                <a
                    href={link.href}
                    class="hover:text-primary-500 dark:hover:text-primary-400 transition-colors duration-200"
                >
                  {link.label}
                </a>
              </li>
          ))}
        </ul>
      </div>

      <!-- FAQs -->
      <div>
        <h3 class="text-xl font-semibold font-serif text-neutral-800 dark:text-neutral-100 mb-4">FAQs</h3>
        <ul class="space-y-2">
          {faqs.map(faq => (
              <li>
                <a
                    href={faq.href}
                    class="hover:text-primary-500 dark:hover:text-primary-400 transition-colors duration-200"
                >
                  {faq.label}
                </a>
              </li>
          ))}
        </ul>
      </div>

      <!-- Contact Form -->
      <div>
        <h3 class="text-xl font-semibold font-serif text-neutral-800 dark:text-neutral-100 mb-4">Contact Us</h3>
        <form class="space-y-3">
          <div>
            <label>
              <input type="email" placeholder="Email Address" class="input" required />
            </label>
          </div>
          <div>
            <label>
              <textarea placeholder="Your Message" rows="3" class="input"></textarea>
            </label>
          </div>
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="py-4 border-t border-neutral-200 dark:border-neutral-800 text-sm text-center">
      <p>&copy; {new Date().getFullYear()} Harmony Hotel Group. All rights reserved.</p>
    </div>
  </div>
</footer>
---
import { trans } from "../../utils/translations";
import ContactForm from "../forms/ContactForm.astro";
import SocialLinks from "./SocialLinks.astro";

interface Props {
  lang: string;
}

const { lang } = Astro.props;

const quickLinks = [
  {
    label: trans(lang, "components.common.navigation.url.about-us"),
    href: "/about",
  },
  {
    label: trans(lang, "components.common.navigation.url.hotel"),
    href: "/hotels",
  },
  {
    label: trans(lang, "components.common.navigation.url.destinations"),
    href: "/destinations",
  },
  {
    label: trans(lang, "components.common.navigation.url.offers"),
    href: "/offers",
  },
  {
    label: trans(lang, "components.common.navigation.url.blog"),
    href: "/blog",
  },
  {
    label: trans(lang, "components.common.navigation.url.contact"),
    href: "/contact",
  },
  {
    label: trans(lang, "components.common.navigation.url.privacy-policy"),
    href: "/privacy",
  },
  {
    label: trans(lang, "components.common.navigation.url.terms-of-service"),
    href: "/terms",
  },
];

const faqs = [
  {
    label: trans(lang, "components.common.navigation.url.faq-booking"),
    href: "/faq#booking",
  },
  {
    label: trans(
      lang,
      "components.common.navigation.url.faq-cancellation-policy"
    ),
    href: "/faq#cancellation",
  },
  {
    label: trans(lang, "components.common.navigation.url.faq-loyalty-program"),
    href: "/faq#loyalty",
  },
  {
    label: trans(lang, "components.common.navigation.url.faq-payment-methods"),
    href: "/faq#payment",
  },
];
---

<footer
  class="bg-neutral-100 dark:bg-neutral-900 text-neutral-700 dark:text-neutral-300 border-t border-neutral-200 dark:border-neutral-800"
>
  <div class="">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 py-12 px-5 lg:px-16 2xl:px-20 place-content-center">
      <!-- Company Info -->
      <div>
        <h3
          class="text-xl font-semibold font-serif text-neutral-800 dark:text-neutral-100 mb-4"
        >
          {trans(lang, "components.common.footer.title")}
        </h3>
        <p class="mb-4">{trans(lang, "components.common.footer.subtitle")}</p>
        <SocialLinks />
      </div>

      <!-- Quick Links -->
      <div>
        <h3
          class="text-xl font-semibold font-serif text-neutral-800 dark:text-neutral-100 mb-4"
        >
          {trans(lang, "components.common.footer.quick-links")}
        </h3>
        <ul class="space-y-2">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary-500 dark:hover:text-primary-400 transition-colors duration-200"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- FAQs -->
      <div>
        <h3
          class="text-xl font-semibold font-serif text-neutral-800 dark:text-neutral-100 mb-4"
        >
          FAQs
        </h3>
        <ul class="space-y-2">
          {
            faqs.map((faq) => (
              <li>
                <a
                  href={faq.href}
                  class="hover:text-primary-500 dark:hover:text-primary-400 transition-colors duration-200"
                >
                  {faq.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Form -->
      <div>
        <ContactForm />
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="py-4 border-t border-neutral-200 dark:border-neutral-800 text-sm text-center"
    >
      <p>
        &copy; 2021 -  {new Date().getFullYear()} Harmony Hotel Group. All rights reserved.
      </p>
    </div>
  </div>
</footer>

---
import { Image } from "astro:assets";

// Constantes para valores predeterminados
const DEFAULT_IMAGE_URL: string = "https://placehold.co/1920x1080.png";
const DEFAULT_IMAGE_WIDTH: number = 1920;
const DEFAULT_IMAGE_HEIGHT: number = 1080;
const DEFAULT_IMAGE_QUALITY: number = 90;

const {
    src = DEFAULT_IMAGE_URL,
    alt = "No alt applied",
    overlayOpacity = 40,
} = Astro.props;

// Helper para crear el estilo de overlay din√°micamente
const overlayStyle = `bg-black/${overlayOpacity}`;
---

<div class="image-container">
  <Image
    alt={alt}
    src={src}
    data-ai-hint="tropical resort pool"
    width={DEFAULT_IMAGE_WIDTH}
    height={DEFAULT_IMAGE_HEIGHT}
    loading="eager"
    class="hero-image"
    format="webp"
    quality={DEFAULT_IMAGE_QUALITY}
  />
  <div class="absolute inset-0 bg-black/40"></div>
  <div class={`overlay ${overlayStyle}`}></div>
</div>

<style>
  .image-container {
    position: absolute;
    inset: 0;
    z-index: 0;

    width: 100%;
    height: 100%;
  }
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .overlay {
    position: absolute;
    inset: 0;
  }
</style>

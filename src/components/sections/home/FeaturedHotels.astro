---
// FeaturedHotels.astro - Featured hotels section for homepage
import { Image } from 'astro:assets';
import { getFeaturedHotels } from '@utils/api';

// Fetch featured hotels from API
const featuredHotels = await getFeaturedHotels(3);
---

<section class="py-16 bg-white dark:bg-harmony-black-800">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-harmony-black-800 dark:text-white mb-4">
        Nuestros Hoteles
      </h2>
      <p class="text-lg text-harmony-black-600 dark:text-harmony-white-600 max-w-3xl mx-auto">
        Descubra nuestra colección de hoteles exclusivos en Cuenca, cada uno con su propio carácter y encanto único.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredHotels.map(hotel => (
        <div class="bg-white dark:bg-harmony-black-700 rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105">
          <div class="h-64 overflow-hidden">
            <img 
              src={hotel.image.replace('/src', '')} 
              alt={hotel.name}
              class="w-full h-full object-cover"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-serif font-semibold text-harmony-black-800 dark:text-white mb-2">{hotel.name}</h3>
            <p class="text-harmony-black-600 dark:text-harmony-white-600 mb-4 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 text-harmony-gold-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              {hotel.location}
            </p>
            <p class="text-harmony-black-700 dark:text-harmony-white-700 mb-4 line-clamp-3">{hotel.description}</p>
            <div class="flex justify-between items-center">
              <span class="text-harmony-gold-600 font-bold">${hotel.price} USD / noche</span>
              <a 
                href={`/hoteles#hotel-${hotel.id}`}
                class="inline-flex items-center px-4 py-2 bg-harmony-black-700 text-white rounded hover:bg-harmony-black-800 transition-colors"
              >
                Ver detalles
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a 
        href="/hoteles" 
        class="inline-flex items-center px-6 py-3 bg-harmony-gold-600 text-white rounded-md hover:bg-harmony-gold-700 transition-colors"
      >
        <span>Mostrar más</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

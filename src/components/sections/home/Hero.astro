---
import {trans} from "~/utils/translations";
import ImageFull from "../../core/imagen/ImageFull.astro";
import {imageUrl} from "../../../utils/tina";
import Button from "../../ui/Button.astro";
import ReservationForm from "../../forms/ReservationForm.astro";

interface Props {
    lang: string;
}
// const quickLinks = [
//     {label: trans(lang, "components.common.navigation.url.about-us"), href: "/about"},
//     {label: trans(lang, "components.common.navigation.url.hotel"), href: "/hotels"},
//     {label: trans(lang, "components.common.navigation.url.destinations"), href: "/destinations"},
//     {label: trans(lang, "components.common.navigation.url.offers"), href: "/offers"},
//     {label: trans(lang, "components.common.navigation.url.blog"), href: "/blog"},
//     {label: trans(lang, "components.common.navigation.url.contact"), href: "/contact"},
//     {label: trans(lang, "components.common.navigation.url.privacy-policy"), href: "/privacy"},
//     {label: trans(lang, "components.common.navigation.url.terms-of-service"), href: "/terms"},
// ];
const {lang} = Astro.props;
---

<div class="relative flex flex-col items-center justify-start min-h-[calc(100vh-5rem)] overflow-hidden"> {/* 5rem is approx header height */}
    {/* Background Image */}
    // <ImageFull src={imageUrl({url: "upload/hm2_portada.jpg", back: 0})}></ImageFull>

    {/* Hero Content */}
    <div class="relative z-10 w-full pt-20 md:pt-28 lg:pt-32 text-center text-white">
        <div class="container px-4 md:px-6 max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl drop-shadow-md">
                {trans(lang, "home.hero.title")}
            </h1>
            <p class="mt-4 max-w-2xl mx-auto text-lg md:text-xl text-neutral-200 drop-shadow-sm">
                {trans(lang, "home.hero.subtitle")}
            </p>
            <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
                <Button
                        href="/hotels"
                        variant="outline"
                        class="bg-primary hover:bg-primary/90 text-primary-foreground shadow-lg"
                >
                    {trans(lang, "home.hero.btn.view-hotels")}
                </Button>

                <Button
                        href="/offers"
                        variant="outline"
                        class="bg-white text-primary border-primary hover:bg-neutral-100 shadow-lg"
                >
                    {trans(lang, "home.hero.btn.view-offers")}
                </Button>
            </div>
        </div>
    </div>

    {/* Booking Form Section */}
    <div class="relative z-10 w-full mt-12 md:mt-16 lg:mt-20 pb-12 px-4">
        <div class="container max-w-4xl mx-auto">
            <ReservationForm lang={lang}/>
        </div>
    </div>
</div>


---
import {trans} from "../../../utils/translations";
import ReservationForm from "../../forms/ReservationForm.astro";

const lang = Astro.currentLocale;
---

<section class="relative h-[85vh] min-h-[600px] overflow-hidden">
    <!-- Hero Background -->
    <div class="absolute inset-0 z-0">
        <img
                src="https://images.pexels.com/photos/338504/pexels-photo-338504.jpeg?auto=compress&cs=tinysrgb&w=1600"
                alt="Hotel view"
                class="w-full h-full object-cover"
                fetchpriority="high"
        />
        <div class="absolute inset-0 bg-neutral-900/50"></div>
    </div>

    <!-- Hero Content -->
    <div class="container relative z-10 flex h-full items-center justify-between">
        <div class="max-w-2xl text-white slide-up">
            <h1 class="mb-6">{trans(lang, "home.hero.title")}</h1>
            <p class="text-xl mb-8">
                {trans(lang, "home.hero.subtitle")}
            </p>
            <div class="flex flex-wrap gap-4">
                <a href="/hotels" class="btn btn-primary">
                    {trans(lang, "home.hero.buttons.view-hotels")}
                </a>
                <a href="/offers" class="btn bg-white text-neutral-900 hover:bg-neutral-100">
                    {trans(lang, "home.hero.buttons.view-offers")}
                </a>
            </div>
        </div>
        <ReservationForm/>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white animate-bounce">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
             class="w-10 h-10">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5"/>
        </svg>
    </div>
</section>
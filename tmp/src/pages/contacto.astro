---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

// Get translations based on current locale
const { currentLocale } = Astro;
const translations = await import(`../i18n/${currentLocale || 'es'}.json`);

// Contact information
const contactInfo = [
  {
    icon: 'lucide:phone',
    title: 'Teléfono',
    details: ['+1 (555) 123-4567', '+1 (555) 987-6543'],
    action: 'tel:+15551234567'
  },
  {
    icon: 'lucide:mail',
    title: 'Email',
    details: ['info@harmonyhotelgroup.com', 'reservations@harmonyhotelgroup.com'],
    action: 'mailto:info@harmonyhotelgroup.com'
  },
  {
    icon: 'lucide:map-pin',
    title: 'Dirección',
    details: ['Av. Paseo de la Reforma 483', 'Cuauhtémoc, Ciudad de México, CDMX 06500'],
    action: 'https://maps.google.com/?q=Av.+Paseo+de+la+Reforma+483,+Cuauhtémoc,+Ciudad+de+México'
  }
];

// Office locations
const locations = [
  {
    city: 'Ciudad de México',
    address: 'Av. Paseo de la Reforma 483, Cuauhtémoc, CDMX 06500',
    phone: '+52 55 1234 5678',
    email: 'cdmx@harmonyhotelgroup.com',
    hours: 'Lun - Vie: 9:00 - 18:00'
  },
  {
    city: 'Cancún',
    address: 'Blvd. Kukulcán Km 12.5, Zona Hotelera, Cancún 77500',
    phone: '+52 998 123 4567',
    email: 'cancun@harmonyhotelgroup.com',
    hours: 'Lun - Vie: 9:00 - 18:00, Sáb: 10:00 - 14:00'
  },
  {
    city: 'Los Cabos',
    address: 'Carretera Transpeninsular Km 19.5, San José del Cabo 23405',
    phone: '+52 624 123 4567',
    email: 'loscabos@harmonyhotelgroup.com',
    hours: 'Lun - Vie: 9:00 - 18:00'
  }
];
---

<Layout title={translations.nav.contact}>
  <div class="pt-24 pb-16 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-serif text-center mb-8 dark:text-white">{translations.nav.contact}</h1>
      
      <!-- Contact Information Cards -->
      <div class="grid md:grid-cols-3 gap-6 mb-16">
        {contactInfo.map(info => (
          <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-lg text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gold-600/10 rounded-full mb-4">
              <Icon name={info.icon} class="w-8 h-8 text-gold-600" />
            </div>
            <h2 class="text-xl font-semibold mb-3 dark:text-white">{info.title}</h2>
            <div class="space-y-1 mb-4">
              {info.details.map(detail => (
                <p class="text-gray-600 dark:text-gray-400">{detail}</p>
              ))}
            </div>
            <a 
              href={info.action}
              class="inline-block text-gold-600 hover:text-gold-700 transition-colors font-medium"
            >
              Contactar
            </a>
          </div>
        ))}
      </div>
      
      <!-- Contact Form -->
      <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg overflow-hidden mb-16">
        <div class="grid md:grid-cols-2">
          <div class="p-8">
            <h2 class="text-2xl font-serif mb-4 dark:text-white">Envíanos un mensaje</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-6">
              Completa el formulario y nos pondremos en contacto contigo lo antes posible.
            </p>
            
            <form class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nombre</label>
                  <input 
                    type="text" 
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold-500"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Apellido</label>
                  <input 
                    type="text" 
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold-500"
                    required
                  />
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
                <input 
                  type="email" 
                  class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold-500"
                  required
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Teléfono</label>
                <input 
                  type="tel" 
                  class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold-500"
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Asunto</label>
                <select 
                  class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold-500"
                  required
                >
                  <option value="">Selecciona un asunto</option>
                  <option value="reservation">Reservaciones</option>
                  <option value="information">Información general</option>
                  <option value="feedback">Comentarios</option>
                  <option value="complaint">Quejas</option>
                  <option value="other">Otro</option>
                </select>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Mensaje</label>
                <textarea 
                  rows="4" 
                  class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold-500"
                  required
                ></textarea>
              </div>
              
              <button 
                type="submit"
                class="w-full bg-gold-600 text-white py-2 rounded-md hover:bg-gold-700 transition-colors"
              >
                Enviar mensaje
              </button>
            </form>
          </div>
          
          <div class="bg-gray-100 dark:bg-gray-800">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.661075404825!2d-99.16869732526424!3d19.427023041858!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1ff35f5bd1563%3A0x6c366f0e2de02ff7!2sAv.%20Paseo%20de%20la%20Reforma%2C%20Ciudad%20de%20M%C3%A9xico%2C%20CDMX!5e0!3m2!1ses!2smx!4v1709902149262!5m2!1ses!2smx"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen="false"
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>
      </div>
      
      <!-- Office Locations -->
      <h2 class="text-2xl font-serif text-center mb-8 dark:text-white">Nuestras Oficinas</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {locations.map(location => (
          <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-lg">
            <h3 class="text-xl font-semibold mb-3 dark:text-white">{location.city}</h3>
            <div class="space-y-3 text-gray-600 dark:text-gray-400">
              <p class="flex items-start gap-2">
                <Icon name="lucide:map-pin" class="w-5 h-5 text-gold-600 shrink-0 mt-0.5" />
                <span>{location.address}</span>
              </p>
              <p class="flex items-center gap-2">
                <Icon name="lucide:phone" class="w-5 h-5 text-gold-600" />
                <span>{location.phone}</span>
              </p>
              <p class="flex items-center gap-2">
                <Icon name="lucide:mail" class="w-5 h-5 text-gold-600" />
                <span>{location.email}</span>
              </p>
              <p class="flex items-center gap-2">
                <Icon name="lucide:clock" class="w-5 h-5 text-gold-600" />
                <span>{location.hours}</span>
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>
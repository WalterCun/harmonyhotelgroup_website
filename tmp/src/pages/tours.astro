---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

// Get translations based on current locale
const { currentLocale } = Astro;
const translations = await import(`../i18n/${currentLocale || 'es'}.json`);

// Tours data
const tours = [
  {
    id: 1,
    title: 'Tour a Chichen Itzá',
    location: 'Yucatán, México',
    duration: '12 horas',
    price: 1200,
    rating: 4.8,
    reviews: 245,
    image: 'https://images.unsplash.com/photo-1518638150340-f706e86654de?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80',
    description: 'Explora una de las 7 maravillas del mundo moderno con nuestro tour guiado a Chichen Itzá.'
  },
  {
    id: 2,
    title: 'Aventura en Xcaret',
    location: 'Riviera Maya, México',
    duration: '10 horas',
    price: 1800,
    rating: 4.9,
    reviews: 320,
    image: 'https://images.unsplash.com/photo-1585540083814-ea6ee1f33936?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80',
    description: 'Disfruta de un día completo en el parque eco-arqueológico más famoso de México.'
  },
  {
    id: 3,
    title: 'Ruinas de Tulum',
    location: 'Quintana Roo, México',
    duration: '6 horas',
    price: 950,
    rating: 4.7,
    reviews: 189,
    image: 'https://images.unsplash.com/photo-1504730030853-eff311f57d3c?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80',
    description: 'Visita las impresionantes ruinas mayas de Tulum con vistas al mar Caribe.'
  },
  {
    id: 4,
    title: 'Isla Mujeres en Catamarán',
    location: 'Cancún, México',
    duration: '8 horas',
    price: 1500,
    rating: 4.6,
    reviews: 156,
    image: 'https://images.unsplash.com/photo-1552074284-5e88ef1aef18?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80',
    description: 'Navega en catamarán hasta Isla Mujeres y disfruta de sus playas paradisíacas.'
  },
  {
    id: 5,
    title: 'Cenotes Sagrados',
    location: 'Riviera Maya, México',
    duration: '7 horas',
    price: 1100,
    rating: 4.8,
    reviews: 210,
    image: 'https://images.unsplash.com/photo-1544551763-46a013bb70d5?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80',
    description: 'Sumérgete en las aguas cristalinas de los cenotes más impresionantes de la península.'
  },
  {
    id: 6,
    title: 'Avistamiento de Ballenas',
    location: 'Los Cabos, México',
    duration: '4 horas',
    price: 1300,
    rating: 4.9,
    reviews: 178,
    image: 'https://images.unsplash.com/photo-1568430462989-44163eb1752f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80',
    description: 'Observa ballenas jorobadas en su hábitat natural durante la temporada de migración.'
  }
];
---

<Layout title={translations.nav.tours}>
  <div class="pt-24 pb-16 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-serif text-center mb-8 dark:text-white">{translations.nav.tours}</h1>
      
      <!-- Tours Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {tours.map(tour => (
          <div class="bg-white dark:bg-gray-900 rounded-lg overflow-hidden shadow-lg">
            <div class="relative h-48 overflow-hidden">
              <img 
                src={tour.image} 
                alt={tour.title}
                class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
              />
              <div class="absolute top-4 right-4 bg-white dark:bg-gray-800 rounded-full px-3 py-1 text-sm font-semibold text-gold-600">
                ${tour.price} MXN
              </div>
            </div>
            <div class="p-6">
              <h2 class="text-xl font-serif font-semibold mb-2 dark:text-white">{tour.title}</h2>
              <div class="flex items-center gap-1 text-gray-600 dark:text-gray-400 mb-2">
                <Icon name="lucide:map-pin" class="w-4 h-4 text-gold-600" />
                <span class="text-sm">{tour.location}</span>
              </div>
              <div class="flex items-center gap-1 text-gray-600 dark:text-gray-400 mb-4">
                <Icon name="lucide:clock" class="w-4 h-4 text-gold-600" />
                <span class="text-sm">{tour.duration}</span>
              </div>
              <p class="text-gray-600 dark:text-gray-400 mb-4 text-sm">{tour.description}</p>
              <div class="flex justify-between items-center">
                <div class="flex items-center gap-1">
                  <Icon name="lucide:star" class="w-4 h-4 text-yellow-500" />
                  <span class="text-sm font-semibold">{tour.rating}</span>
                  <span class="text-xs text-gray-500">({tour.reviews} reviews)</span>
                </div>
                <a 
                  href={`/tours/${tour.id}`}
                  class="inline-block bg-gold-600 text-white px-4 py-2 rounded-md hover:bg-gold-700 transition-colors"
                >
                  Reservar
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>